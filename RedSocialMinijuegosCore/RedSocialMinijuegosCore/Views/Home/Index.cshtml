<!-- Review section -->
<section class="review-section spad set-bg" data-setbg="img/review-bg.png">
    <div class="container">
        <div class="section-title">
            <div class="cata new">new</div>
            <h2>Mas Jugados</h2>
        </div>
        <div class="row">
            @foreach (Juego a in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="review-item">
                        <div class="review-cover set-bg" data-setbg="img/Carrusel/@a.Imagen">
                            <div class="score yellow">@a.ValoracionTotal</div>
                        </div>
                        <div class="review-text">
                            <h5>@a.Nombre</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>