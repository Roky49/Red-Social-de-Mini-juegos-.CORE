
@model List<Juego>
@{
    ViewData["Title"] = "index";
}

<!-- Hero section -->
<section class="hero-section">
    <div class="hero-slider owl-carousel">
        @foreach (Juego j in Model)
        {
            <div class="hs-item set-bg" data-setbg="img/Carrusel/@j.Imagen">
                <div class="hs-text">
                    <div class="container">
                        <h2><span>@j.Nombre</span> </h2>
                        <a href="@Url.Action("Index", "Juegos", new { nombre = j.Nombre })" class="site-btn">Jugar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- Hero section end -->
<!-- Meter los jugador -->
