@model IEnumerable<RedSocialMinijuegosCore.Models.Categoria>

<p>
    @Html.ActionLink("Crear Categoria", "CreateCategoria")
</p>
<table class="table text-center ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th> </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCategoria", new { id = item.IdCategoria }) |

                @Html.ActionLink("Delete", "BorrarCategoria", new { id = item.IdCategoria })
            </td>
        </tr>
    }

</table>
